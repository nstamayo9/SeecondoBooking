<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | CondoBook</title>
    
        <!-- ✅ FAVICON ADDED HERE -->
    <link rel="icon" type="image/png" href="/images/logo.png">
    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --bg-light: #f8f9fa;
            --text-dark: #1f2937;
            --card-radius: 16px;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-light);
            color: var(--text-dark);
        }

        /* --- Carousel --- */
        .carousel-inner {
            border-radius: var(--card-radius);
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .carousel-item img {
            height: 500px;
            object-fit: cover;
            cursor: pointer;
            transition: transform 0.3s;
        }
        .carousel-item img:hover {
            transform: scale(1.02);
        }

        /* --- Booking Card --- */
        .booking-card {
            border: none;
            border-radius: var(--card-radius);
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            position: sticky;
            top: 100px;
            z-index: 10;
        }

        .price-tag {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 0.75rem;
            border: 1px solid #e5e7eb;
            font-size: 0.95rem;
        }
        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.15);
        }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            padding: 1rem;
            font-weight: 600;
            border-radius: 8px;
            letter-spacing: 0.5px;
            transition: all 0.2s;
        }
        .btn-primary:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
        }

        .amenity-item {
            background: white;
            padding: 10px 15px;
            border-radius: 8px;
            border: 1px solid #f0f0f0;
            display: flex;
            align-items: center;
            font-weight: 500;
            color: #4b5563;
        }
        .amenity-item i { color: var(--primary-color); margin-right: 10px; }

        .xs-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #6b7280;
            font-weight: 700;
            margin-bottom: 0.4rem;
            display: block;
        }
    </style>
</head>
<body>

    <%- include('../partials/navbar') %>

    <div class="container py-5">
        <div class="row g-5">
            
            <!-- LEFT COLUMN: Room Details -->
            <div class="col-lg-8">
                
                <!-- CAROUSEL SLIDER -->
                <div id="roomCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <% room.images.forEach((img, index) => { %>
                            <button type="button" data-bs-target="#roomCarousel" data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>"></button>
                        <% }) %>
                    </div>
                    <div class="carousel-inner">
                        <% room.images.forEach((img, index) => { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <img src="<%= img %>" class="d-block w-100" alt="Room Image" onclick="openLightbox('<%= img %>')">
                            </div>
                        <% }) %>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#roomCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon p-3 bg-dark rounded-circle bg-opacity-50" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#roomCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon p-3 bg-dark rounded-circle bg-opacity-50" aria-hidden="true"></span>
                    </button>
                </div>

                <!-- TITLE & LOCATION -->
                <div class="mb-4">
                    <h1 class="display-5 fw-bold text-dark mb-2"><%= room.name %></h1>
                    <div class="d-flex align-items-center text-muted">
                        <i class="fas fa-map-marker-alt text-danger me-2"></i> 
                        <span>Prime Location, Pico De Loro Cove, Batangas</span>
                    </div>
                </div>

                <hr class="my-4 opacity-10">

                <!-- DESCRIPTION -->
                <div class="mb-5">
                    <h4 class="fw-bold mb-3">About this space</h4>
                    <p class="lead fs-6 text-secondary" style="line-height: 1.8;"><%= room.description %></p>
                </div>

                <hr class="my-4 opacity-10">

                <!-- AMENITIES -->
                <div class="mb-5">
                    <h4 class="fw-bold mb-3">What this place offers</h4>
                    <div class="row g-3">
                        <% room.amenities.forEach(item => { %>
                            <div class="col-md-6">
                                <div class="amenity-item">
                                    <i class="fas fa-check-circle"></i> <%= item %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>

            </div>

            <!-- RIGHT COLUMN: Booking Form -->
            <div class="col-lg-4">
                <div class="card booking-card">
                    <div class="card-body p-4">
                        
                        <!-- Price Header -->
                        <div class="d-flex justify-content-between align-items-baseline mb-4 border-bottom pb-3">
                            <div>
                                <span class="price-tag">₱<%= room.pricePerNight.toLocaleString() %></span>
                                <span class="text-muted">/ night</span>
                            </div>
                            <div class="text-warning small fw-bold">
                                <i class="fas fa-star"></i> Featured
                            </div>
                        </div>

                        <form id="bookingForm" action="/booking/checkout" method="GET">
                            <input type="hidden" id="roomId" name="roomId" value="<%= room._id %>">

                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <label class="xs-label">Check-in</label>
                                    <input type="text" id="checkInPicker" name="checkIn" class="form-control bg-white" placeholder="Select Date" required>
                                    <div class="form-text text-muted" style="font-size: 0.7rem;">2:00 PM</div>
                                </div>
                                <div class="col-6">
                                    <label class="xs-label">Check-out</label>
                                    <input type="text" id="checkOutPicker" name="checkOut" class="form-control bg-white" placeholder="Select Date" required>
                                    <div class="form-text text-muted" style="font-size: 0.7rem;">11:00 AM</div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="xs-label">Guests</label>
                                <select class="form-select" name="guests">
                                    <% 
                                        // Allow selecting up to Capacity + 2 (for infants)
                                        const maxSelectable = room.capacity + 2; 
                                    %>
                                    <% for(let i=1; i<=maxSelectable; i++) { %>
                                        <option value="<%= i %>">
                                            <%= i %> Guest<%= i > 1 ? 's' : '' %>
                                            <%= i > room.capacity ? '(If adding infants)' : '' %>
                                        </option>
                                    <% } %>
                                </select>
                                <div class="mt-2 small text-muted bg-light p-2 rounded border">
                                    <i class="fas fa-info-circle text-primary me-1"></i> 
                                    Max capacity is <%= room.capacity %>. Infants (0-1 yr) are free and excluded from count.
                                </div>
                            </div>

                            <!-- ERROR MESSAGE BOX (Hidden) -->
                            <div id="availabilityError" class="alert alert-danger align-items-center small" style="display: none;">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <div><span id="errorText"></span></div>
                            </div>

                            <div class="d-grid">
                                <button type="button" class="btn btn-primary btn-lg shadow-sm" onclick="validateAndSubmit()">
                                    Reserve Now
                                </button>
                            </div>
                            
                            <div class="text-center mt-3 small text-muted">
                                You won't be charged yet
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lightbox Modal -->
    <div class="modal fade" id="lightboxModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen p-0">
            <div class="modal-content bg-dark">
                <div class="modal-header border-0 position-absolute top-0 end-0 z-3">
                    <button type="button" class="btn-close btn-close-white m-3" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body d-flex align-items-center justify-content-center h-100">
                    <img id="lightboxImage" src="" class="img-fluid shadow-lg rounded" style="max-height: 90vh;">
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        function openLightbox(imageUrl) {
            document.getElementById('lightboxImage').src = imageUrl;
            var myModal = new bootstrap.Modal(document.getElementById('lightboxModal'));
            myModal.show();
        }

        const roomId = document.getElementById('roomId').value;
        let busyRanges = [];
        const STANDARD_CHECKIN = 14; // 2 PM
        const STANDARD_CHECKOUT = 11; // 11 AM

        async function fetchBusyTimes() {
            try {
                const response = await fetch(`/api/v1/room/${roomId}/busy-times?date=2024-01-01`); 
                const data = await response.json();
                busyRanges = data.map(range => ({ from: range.from, to: range.to }));
                initPickers();
            } catch (err) {
                console.error(err);
                initPickers();
            }
        }

        function initPickers() {
            const checkOutPicker = flatpickr("#checkOutPicker", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
                minDate: "today",
                defaultHour: STANDARD_CHECKOUT,
                disable: busyRanges,
                onReady: function(selectedDates, dateStr, instance) {
                    if(instance.timeContainer) instance.timeContainer.style.display = 'none'; 
                }
            });

            const checkInPicker = flatpickr("#checkInPicker", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
                minDate: "today",
                defaultHour: STANDARD_CHECKIN,
                disable: busyRanges,
                onReady: function(selectedDates, dateStr, instance) {
                    if(instance.timeContainer) instance.timeContainer.style.display = 'none';
                },
                onChange: function(selectedDates, dateStr, instance) {
                    if (selectedDates.length > 0) {
                        const checkInDate = selectedDates[0];
                        const nextDay = new Date(checkInDate);
                        nextDay.setDate(nextDay.getDate() + 1);
                        nextDay.setHours(STANDARD_CHECKOUT, 0, 0, 0);

                        checkOutPicker.set('minDate', nextDay);
                        checkOutPicker.setDate(nextDay);
                    }
                }
            });
        }

        // --- VALIDATION LOGIC ---
        async function validateAndSubmit() {
            const checkIn = document.getElementById('checkInPicker').value;
            const checkOut = document.getElementById('checkOutPicker').value;
            const errorBox = document.getElementById('availabilityError');
            const errorText = document.getElementById('errorText');
            const btn = document.querySelector('button[onclick="validateAndSubmit()"]');

            if (!checkIn || !checkOut) {
                errorBox.style.display = 'flex';
                errorText.innerText = 'Please select check-in and check-out dates.';
                return;
            }

            // Disable button
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Checking...';
            errorBox.style.display = 'none';

            try {
                // Call API
                const response = await fetch('/api/v1/check-availability', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ roomId, checkIn, checkOut })
                });

                const result = await response.json();

                if (result.available) {
                    // Success: Submit Form
                    document.getElementById('bookingForm').submit();
                } else {
                    // Fail: Show Error
                    errorBox.style.display = 'flex';
                    errorText.innerHTML = `${result.message} <br>Please choose different dates.`;
                    btn.disabled = false;
                    btn.innerText = 'Reserve Now';
                }

            } catch (err) {
                console.error(err);
                errorBox.style.display = 'flex';
                errorText.innerText = 'Server Error. Try again.';
                btn.disabled = false;
                btn.innerText = 'Reserve Now';
            }
        }

        fetchBusyTimes();
    </script>
</body>
</html>