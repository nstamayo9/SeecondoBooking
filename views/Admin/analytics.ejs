<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Intelligence | See Condo</title>
    <link rel="icon" type="image/png" href="/images/logo.png">
    
    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=Anton&family=Cormorant+Garamond:wght@600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            --primary-gold: #b99d75; /* Luxury Gold */
            --bg-dark: #0f172a;
            --card-bg: rgba(30, 41, 59, 0.6); /* Glass */
            --text-light: #f8fafc;
            --text-muted: #94a3b8;
        }

        body {
            background-color: var(--bg-dark);
            background-image: url('<%= (typeof config !== "undefined" && config.heroImages && config.heroImages.length > 0) ? config.heroImages[0] : "https://images.unsplash.com/photo-1542314831-068cd1dbfeeb?q=80" %>');
            background-size: cover;
            background-attachment: fixed;
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        /* Dark Overlay */
        body::before {
            content: ''; position: fixed; top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(15, 23, 42, 0.9); /* Heavy dark tint */
            z-index: -1;
        }

        /* --- NAVBAR --- */
        .navbar { 
            background: rgba(15, 23, 42, 0.95); 
            backdrop-filter: blur(10px); 
            border-bottom: 1px solid rgba(255,255,255,0.1); 
            padding: 1rem 0;
        }
        .navbar-brand { font-family: 'Anton', sans-serif; letter-spacing: 1px; color: white !important; }
        
        .btn-back {
            color: var(--text-muted);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 50px;
            padding: 8px 20px;
            text-decoration: none;
            transition: all 0.3s;
            font-size: 0.9rem;
        }
        .btn-back:hover {
            background: var(--primary-gold);
            color: black;
            border-color: var(--primary-gold);
        }

        /* --- CARDS --- */
        .kpi-card {
            background: rgba(255,255,255,0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 16px;
            padding: 24px;
            transition: transform 0.3s ease;
            height: 100%;
        }
        .kpi-card:hover { transform: translateY(-5px); border-color: var(--primary-gold); }
        
        .chart-card {
            background: rgba(30, 41, 59, 0.8);
            border-radius: 16px;
            padding: 20px;
            border: 1px solid rgba(255,255,255,0.05);
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }

        /* --- TEXT & ICONS --- */
        .text-label { font-size: 0.75rem; text-transform: uppercase; letter-spacing: 2px; color: var(--text-muted); font-weight: 600; }
        .text-value { font-size: 2.2rem; font-weight: 700; color: white; margin: 10px 0; font-family: 'Cormorant Garamond', serif; }
        .icon-box {
            width: 50px; height: 50px; border-radius: 12px;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.5rem; color: var(--primary-gold);
            background: rgba(185, 157, 117, 0.1);
            border: 1px solid rgba(185, 157, 117, 0.2);
        }

        /* --- FILTER BAR --- */
        .filter-bar {
            background: rgba(255,255,255,0.03);
            border-radius: 12px;
            padding: 15px;
            border: 1px solid rgba(255,255,255,0.05);
        }
        .form-select { 
            background-color: rgba(0,0,0,0.3); 
            border-color: rgba(255,255,255,0.1); 
            color: white; 
            border-radius: 8px;
        }
        .btn-gold {
            background: var(--primary-gold); color: black; font-weight: bold; border: none; border-radius: 8px;
        }
        .btn-gold:hover { background: #d4b68d; }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top px-4">
        <div class="container-fluid">
            <!-- BACK BUTTON -->
            <a href="/admin" class="btn-back me-4">
                <i class="fas fa-arrow-left me-2"></i> Dashboard
            </a>

            <span class="navbar-brand">Analytics Center</span>
            
            <div class="ms-auto d-flex align-items-center">
                <span class="badge bg-dark border border-secondary px-3 py-2 rounded-pill text-warning">
                    <i class="fas fa-calendar-alt me-2"></i> Year: <%= selectedYear %>
                </span>
            </div>
        </div>
    </nav>

    <div class="container-fluid px-4 mt-4 mb-5">
        
        <!-- 1. KPI CARDS -->
        <div class="row g-4 mb-4">
            <!-- Total Revenue -->
            <div class="col-xl-3 col-md-6">
                <div class="kpi-card">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-label">Total Revenue</div>
                            <div class="text-value">₱<%= kpi.totalRevenue.toLocaleString() %></div>
                            <div class="small text-success"><i class="fas fa-arrow-up me-1"></i> Gross Sales</div>
                        </div>
                        <div class="icon-box"><i class="fas fa-wallet"></i></div>
                    </div>
                </div>
            </div>

            <!-- Occupancy Rate -->
            <div class="col-xl-3 col-md-6">
                <div class="kpi-card">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-label">Occupancy Rate</div>
                            <div class="text-value"><%= kpi.occupancyRate.toFixed(1) %>%</div>
                            <div class="small text-info"><i class="fas fa-bed me-1"></i> <%= kpi.totalNightsBooked %> Nights Sold</div>
                        </div>
                        <div class="icon-box"><i class="fas fa-percent"></i></div>
                    </div>
                </div>
            </div>

            <!-- ADR (Average Daily Rate) -->
            <div class="col-xl-3 col-md-6">
                <div class="kpi-card">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-label">ADR (Avg Rate)</div>
                            <div class="text-value">₱<%= kpi.adr.toLocaleString(undefined, {maximumFractionDigits:0}) %></div>
                            <div class="small text-warning"><i class="fas fa-tag me-1"></i> Per Booking</div>
                        </div>
                        <div class="icon-box"><i class="fas fa-chart-line"></i></div>
                    </div>
                </div>
            </div>

            <!-- Total Bookings -->
            <div class="col-xl-3 col-md-6">
                <div class="kpi-card">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-label">Total Bookings</div>
                            <div class="text-value"><%= kpi.totalBookings %></div>
                            <div class="small text-primary"><i class="fas fa-user-check me-1"></i> Confirmed Stays</div>
                        </div>
                        <div class="icon-box"><i class="fas fa-calendar-check"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 2. FILTER BAR -->
        <div class="filter-bar mb-4">
            <form action="/admin/analytics" method="GET" class="row g-3 align-items-center">
                <div class="col-md-3">
                    <select name="year" class="form-select">
                        <% yearsRange.forEach(y => { %>
                            <option value="<%= y %>" <%= selectedYear === y ? 'selected' : '' %>><%= y %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="category" class="form-select">
                        <option value="">All Categories</option>
                        <option value="Studio" <%= selectedCategory === 'Studio' ? 'selected' : '' %>>Studio</option>
                        <option value="1BR" <%= selectedCategory === '1BR' ? 'selected' : '' %>>1BR</option>
                        <option value="2BR" <%= selectedCategory === '2BR' ? 'selected' : '' %>>2BR</option>
                        <option value="Penthouse" <%= selectedCategory === 'Penthouse' ? 'selected' : '' %>>Penthouse</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-gold w-100">Filter Data</button>
                </div>
            </form>
        </div>

        <!-- 3. MAIN CHARTS -->
        <div class="row g-4 mb-4">
            <!-- DUAL AXIS: Revenue vs Bookings -->
            <div class="col-lg-8">
                <div class="chart-card h-100">
                    <h5 class="fw-bold mb-4 text-white">Revenue vs. Booking Volume</h5>
                    <div style="height: 350px;">
                        <canvas id="revenueMixChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- STATUS DISTRIBUTION -->
            <div class="col-lg-4">
                <div class="chart-card h-100">
                    <h5 class="fw-bold mb-4 text-white">Booking Status</h5>
                    <div style="height: 250px; display: flex; justify-content: center;">
                        <canvas id="statusChart"></canvas>
                    </div>
                    <div class="mt-4 text-center text-muted small">
                        Cancellation Rate Analysis
                    </div>
                </div>
            </div>
        </div>

        <!-- 4. SECONDARY METRICS -->
        <div class="row g-4">
            <!-- TOP ROOMS BY REVENUE -->
            <div class="col-lg-6">
                <div class="chart-card h-100">
                    <h5 class="fw-bold mb-4 text-white">Top Performing Rooms (Revenue)</h5>
                    <div style="height: 300px;">
                        <canvas id="roomChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- LEAD TIME ANALYSIS -->
            <div class="col-lg-6">
                <div class="chart-card h-100">
                    <h5 class="fw-bold mb-4 text-white">Booking Lead Time (Days in Advance)</h5>
                    <div style="height: 300px;">
                        <canvas id="leadTimeChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- SCRIPTS -->
    <script>
        // --- DATA PREPARATION ---
        const monthlyStats = <%- JSON.stringify(monthlyStats) %>;
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
        
        let revenueData = new Array(12).fill(0);
        let bookingsData = new Array(12).fill(0);

        monthlyStats.forEach(item => {
            if(item._id >= 1 && item._id <= 12) {
                revenueData[item._id - 1] = item.revenue;
                bookingsData[item._id - 1] = item.bookings;
            }
        });

        // 1. DUAL AXIS CHART (Revenue + Volume)
        new Chart(document.getElementById('revenueMixChart'), {
            type: 'bar',
            data: {
                labels: months,
                datasets: [
                    {
                        label: 'Revenue (₱)',
                        data: revenueData,
                        backgroundColor: 'rgba(185, 157, 117, 0.7)', // Gold
                        borderRadius: 4,
                        order: 2,
                        yAxisID: 'y'
                    },
                    {
                        label: 'Bookings Count',
                        data: bookingsData,
                        type: 'line',
                        borderColor: '#ffffff',
                        backgroundColor: '#ffffff',
                        borderWidth: 2,
                        pointRadius: 4,
                        tension: 0.4,
                        order: 1,
                        yAxisID: 'y1'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: { mode: 'index', intersect: false },
                plugins: {
                    legend: { labels: { color: '#94a3b8' } }
                },
                scales: {
                    x: { ticks: { color: '#94a3b8' }, grid: { color: 'rgba(255,255,255,0.05)' } },
                    y: {
                        type: 'linear', display: true, position: 'left',
                        ticks: { color: '#94a3b8', callback: val => '₱' + val.toLocaleString() },
                        grid: { color: 'rgba(255,255,255,0.05)' }
                    },
                    y1: {
                        type: 'linear', display: true, position: 'right',
                        ticks: { color: '#ffffff' },
                        grid: { drawOnChartArea: false }
                    }
                }
            }
        });

        // 2. ROOM PERFORMANCE (Horizontal Bar)
        const roomData = <%- JSON.stringify(roomPopularity) %>;
        new Chart(document.getElementById('roomChart'), {
            type: 'bar',
            data: {
                labels: roomData.map(r => r.roomName),
                datasets: [{
                    label: 'Revenue Generated',
                    data: roomData.map(r => r.revenue),
                    backgroundColor: ['#b99d75', '#8c7350', '#5e4b35', '#d4b68d', '#f0e6d2'], // Gold Shades
                    borderRadius: 4
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { ticks: { color: '#94a3b8' }, grid: { color: 'rgba(255,255,255,0.05)' } },
                    y: { ticks: { color: '#e2e8f0' }, grid: { display: false } }
                }
            }
        });

        // 3. STATUS DOUGHNUT
        const statusData = <%- JSON.stringify(statusDistribution) %>;
        new Chart(document.getElementById('statusChart'), {
            type: 'doughnut',
            data: {
                labels: statusData.map(s => s._id.toUpperCase()),
                datasets: [{
                    data: statusData.map(s => s.count),
                    backgroundColor: ['#10b981', '#f59e0b', '#ef4444', '#3b82f6'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { position: 'bottom', labels: { color: '#94a3b8' } } }
            }
        });

        // 4. LEAD TIME (Radar or Bar)
        const leadData = <%- JSON.stringify(leadTimeStats) %>;
        const bucketLabels = {0:"Same Day", 1:"1-7 Days", 7:"1-4 Weeks", 30:"1-3 Months", 90:"3-12 Months", 365:"> 1 Year"};
        
        const leadLabels = leadData.map(l => bucketLabels[l._id] || l._id);
        const leadCounts = leadData.map(l => l.count);

        new Chart(document.getElementById('leadTimeChart'), {
            type: 'line',
            data: {
                labels: leadLabels,
                datasets: [{
                    label: 'Bookings',
                    data: leadCounts,
                    backgroundColor: 'rgba(16, 185, 129, 0.2)',
                    borderColor: '#10b981',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: { ticks: { color: '#94a3b8' }, grid: { display: false } },
                    y: { ticks: { color: '#94a3b8' }, grid: { color: 'rgba(255,255,255,0.05)' } }
                },
                plugins: { legend: { display: false } }
            }
        });
    </script>
</body>
</html>