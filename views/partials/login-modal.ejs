<div class="modal fade" id="loginModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-0 border-0 shadow-lg">
            <div class="modal-header border-0 p-4">
                <h5 class="modal-title serif-font fw-bold fs-4" style="color: #191919; font-family: 'Cormorant Garamond', serif;">Sign In</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body px-4 pb-5">
                
                <!-- Guest Login -->
                <div class="d-grid mb-4">
                    <a href="/auth/google" class="btn btn-outline-dark rounded-0 py-2 text-uppercase" style="letter-spacing: 1px; font-size: 0.8rem;">
                        <img src="https://www.svgrepo.com/show/475656/google-color.svg" width="20" class="me-2"> 
                        Continue with Google
                    </a>
                </div>

                <div class="d-flex align-items-center mb-4">
                    <hr class="flex-grow-1">
                    <span class="mx-3 text-muted small text-uppercase">Or Staff Login</span>
                    <hr class="flex-grow-1">
                </div>

                <!-- Staff Form -->
                <form action="/auth/login" method="POST">
                    <div class="mb-3">
                        <label class="small text-uppercase text-muted fw-bold mb-1">Username</label>
                        <input type="text" name="username" class="form-control rounded-0 p-2" required>
                    </div>
                    <div class="mb-4">
                        <label class="small text-uppercase text-muted fw-bold mb-1">Password</label>
                        <input type="password" name="password" class="form-control rounded-0 p-2" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark rounded-0 py-2 text-uppercase" style="letter-spacing: 1px;">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>